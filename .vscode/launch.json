    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Built-in server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "0.0.0.0:8888",
                "-t",
                "/workspace/sspks"
            ],
            "port": 9003
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "cwd": "${fileDirname}",
            "port": 9003
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003
        }
    ]
}